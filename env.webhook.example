# Vibe Remote Webhook 配置示例
# 将此文件复制为 .env 并填写实际值

# 平台设置
IM_PLATFORM=telegram

# Telegram Bot 配置
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz1234567890

# 聊天白名单 (可选)
# null = 允许所有聊天，[] = 仅允许 DM，[id1,id2] = 允许指定聊天
TELEGRAM_TARGET_CHAT_ID=null

# Webhook 配置（生产环境推荐）
TELEGRAM_WEBHOOK_URL=https://your-domain.com/telegram-webhook
TELEGRAM_WEBHOOK_PORT=8443
TELEGRAM_WEBHOOK_LISTEN=0.0.0.0
TELEGRAM_WEBHOOK_SECRET_TOKEN=your-secret-token-here

# SSL 证书配置（可选，用于自签名证书）
# TELEGRAM_WEBHOOK_CERT_PATH=/path/to/your/cert.pem
# TELEGRAM_WEBHOOK_KEY_PATH=/path/to/your/private.key

# Claude 配置
CLAUDE_DEFAULT_CWD=/path/to/your/project
CLAUDE_PERMISSION_MODE=ask

# 可选：自定义系统提示
# CLAUDE_SYSTEM_PROMPT="You are a helpful coding assistant."

# 日志级别
LOG_LEVEL=INFO

# 清理功能 (删除已完成的任务)
CLEANUP_ENABLED=false
